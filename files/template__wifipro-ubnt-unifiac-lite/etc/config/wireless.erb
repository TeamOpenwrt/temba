config wifi-device 'radio0'
  option type 'mac80211'
  option hwmode '<%= @node.fetch('wifi5_hwmode') %>'
  option path '<%= @node.fetch('wifi5_path') %>'
  option htmode '<%= @node.fetch('wifi5_htmode') %>'
  option channel '<%= @node.fetch('wifi5_channel') %>'
  option country '<%= @node.fetch('wifi_country') %>'
  option txpower '<%= @node.fetch('wifi5_txpower') %>'

config wifi-iface 'default_radio0'
  option device 'radio0'
  option network 'lan'
  option mode 'ap'
  option ssid '<%= @node.fetch('wifi_ssid') %>'
  option encryption 'none'
  option network '<%= @node.fetch('wifi_vlan') %>'

