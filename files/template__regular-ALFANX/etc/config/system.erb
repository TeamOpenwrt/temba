config system
  option ttylogin '0'
  option log_size '64'
  option urandom_seed '0'
  option log_proto 'udp'
  option conloglevel '8'
  option cronloglevel '8'
  option hostname '<%= @node.fetch('node_name') %>'
  option zonename 'Europe/Andorra'
  option timezone 'CET-1CEST,M3.5.0,M10.5.0/3'

config timeserver 'ntp'
  option enabled '1'
  list server '<%= @node.fetch('ntp_server') %>'

config led 'led_wan'
        option name 'WAN'
        option sysfs 'alfa:green:led_2'
        option trigger 'netdev'
        option dev 'eth0'
        option mode 'link tx rx'

config led 'led_lan'
        option name 'LAN'
        option sysfs 'alfa:green:led_3'
        option trigger 'netdev'
        option dev 'eth1'
        option mode 'link tx rx'
