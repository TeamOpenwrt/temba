config wifi-device 'radio0'
  option type 'mac80211'
  option hwmode '11a'
  option path 'platform/ar934x_wmac'
  option legacy_rates '1'
  option txpower '17'
  option distance '1000'
  option htmode '<%= @node['wifi_htmode'] %>'
  option channel '<%= @node['wifi_channel'] %>'
  option country '<%= @node['wifi_country'] %>'
  option txpower '<%= @node['wifi_txpower'] %>'

config wifi-iface 'default_radio0'
  option device 'radio0'
  option encryption 'none'
  option mode 'adhoc'
  option bssid '02:CA:FF:EE:BA:BE'
  option bssid '<%= @node['bssid'] %>'
  option network 'wif0'
  option ssid '<%= @node['node_name'] %>'
