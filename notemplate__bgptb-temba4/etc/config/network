config interface 'loopback'
  option ifname 'lo'
  option proto 'static'
  option ipaddr '127.0.0.1'
  option netmask '255.0.0.0'

config globals 'globals'

config interface 'lan'
  option type 'bridge'
  option ifname 'eth0'
  option proto 'static'
  option ipaddr '10.2.0.1'
  option netmask '255.255.255.224'
  option dns '1.1.1.1'
  option ip6assign '64'

config interface 'bgp10'
  option ifname 'eth1'
  option proto 'static'
  option ipaddr '172.1.1.2'
  option netmask '255.255.255.252'

config interface 'bgp11'
  option ifname 'eth2'
  option proto 'static'
  option ipaddr '172.2.2.2'
  option netmask '255.255.255.252'

config interface 'wan'
  option ifname 'eth3'
  option proto 'dhcp'

config interface 'wan6'
  option ifname 'eth3'
  option proto 'dhcpv6'
